---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Hero Section -->
  <section
    class="relative flex items-center justify-center h-[90vh] bg-blue-950 text-white text-center"
    style="background-image: url('../../public/main.jpg'); background-size: cover; background-position: center;"
  >
    <!-- Overlay -->
    <!-- <div class="absolute inset-0 bg-black bg-opacity-60 z-0"></div> -->

    <!-- Content -->
    <div class="z-10 px-4 max-w-3xl">
      <h1 class="font-serif text-5xl text-white-900">ZM Enterprises</h1>
      <p class="font-sans text-white-700">Where Aluminium Meets Artistry</p>
      <a
        href="#contact"
        class="mt-6 inline-block px-6 py-3 bg-white text-blue-900 rounded-full font-semibold hover:bg-gray-200 transition"
      >
        Get in Touch
      </a>
    </div>
  </section>

  <!-- About Section -->
  <section
    class="py-16 px-6 md:px-16 bg-white flex flex-col md:flex-row items-center gap-12"
  >
    <img
      src="../../public/about.jpg"
      alt="about glasswork"
      class="rounded-lg w-full md:w-1/2 shadow-lg"
    />
    <div class="w-full md:w-1/2">
      <h2 class="font-serif text-3xl font-bold text-blue-900 mb-4">About Us</h2>
      <p class="text-gray-700 leading-relaxed">
        ZM Enterprises brings timeless elegance to modern structures through
        expert aluminium and glasswork. With a decade of experience, we blend
        innovation with craftsmanship to deliver flawless facades, railings, and
        interior installations for residential and commercial spaces.
      </p>
    </div>
  </section>

  <!-- Services -->
  <section class="py-16 px-6 md:px-16 bg-gray-50">
    <h2 class="font-serif text-3xl font-bold text-center text-blue-900 mb-10">
      Our Services
    </h2>
    <div
      class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 text-gray-800"
    >
      {
        [
          "Structure Glazing",
          "Curtain Walls",
          "ACP Cladding",
          "Toughened Glass Facades",
          "Patch & Spider Fittings",
          "Aluminium Euro Series Windows",
          "MS Work & Grills",
          "Glass & SS Railings",
          "Custom Glass Interiors",
        ].map((service) => (
          <div class="bg-white p-6 rounded-xl shadow hover:shadow-md transition">
            <h3 class="text-lg font-semibold text-blue-800">{service}</h3>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Project Gallery -->
  <!-- Our Work / Project Gallery -->
  <section class="py-16 px-6 md:px-16 bg-white">
    <h2 class="font-serif text-3xl font-bold text-center text-blue-900 mb-10">
      Our Work
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        ["project1.jpg", "project2.jpg", "project3.jpg"].map((img, i) => (
          <div class="aspect-[16/9] overflow-hidden rounded-lg shadow-md transform transition hover:scale-105">
            <img
              src={`../../public/${img}`}
              alt={`Project ${i + 1}`}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 px-6 md:px-16 bg-gray-100">
    <h2 class="font-serif text-3xl font-bold text-center text-blue-900 mb-10">
      Why Choose Us
    </h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4 text-center">
      <div>
        <p class="text-4xl text-blue-800 mb-2">🛠️</p>
        <h3 class="font-semibold">10+ Years Experience</h3>
      </div>
      <div>
        <p class="text-4xl text-blue-800 mb-2">🏗️</p>
        <h3 class="font-semibold">Project-Ready Precision</h3>
      </div>
      <div>
        <p class="text-4xl text-blue-800 mb-2">⏱️</p>
        <h3 class="font-semibold">Timely Delivery</h3>
      </div>
      <div>
        <p class="text-4xl text-blue-800 mb-2">✨</p>
        <h3 class="font-semibold">Flawless Finishing</h3>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section id="contact" class="py-16 px-6 md:px-16 bg-white text-center">
    <h2 class="font-serif text-3xl font-bold text-blue-900 mb-4">
      Let's Discuss Your Project
    </h2>
    <p class="text-gray-700 mb-6">
      We’re here to bring your vision to life with elegance and precision.
    </p>
    <div class="space-y-2 text-gray-800">
      <p>📞 9860239177 / 9822292221</p>
      <p>📧 zmenterprises777@gmail.com</p>
      <p>
        📍 C404, Hill Mist Garden Society, NIBM Road, Kondhwa, Pune - 411048
      </p>
    </div>
    <a
      href="tel:9860239177"
      class="mt-6 inline-block px-6 py-3 bg-blue-900 text-white rounded-full hover:bg-blue-800 transition"
    >
      Call Now
    </a>
  </section>
</Layout>
